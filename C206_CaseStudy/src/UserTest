		u1 = new User("John Lim", "12345", "johnlim@C206.com", "Buyer");
		u2 = new User("James Tan", "12345", "jamestan@C206.com", "Buyer");
		u3 = new User("Susan Chan", "12345", "susanchan@C206.com", "Seller");
		u4 = new User("Joan Lee", "12345", "joanlee@C206.com", "Seller");
		
		userList = new ArrayList<User>();
	}
	
	@Test
	public void testAddUser()
	{
		// userList is not null, so that can add a new user
		assertNotNull("Test if there is a valid userList arrayList to add to", userList);
		
		// Given an empty list, after adding 1 item, the size of the list is 1
		C206_CaseStudy.addUser()
	}

